{
	"name": "beerbuddy-web",
	"version": "0.1.0",
	"private": true,
	"cacheDirectories": [
		".next/cache"
	],
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start -p $PORT",
		"prettify": "npx prettier --config ./prettier.config.js ./**/*.js --write",
		"prettify:check": "npx prettier --config ./prettier.config.js ./**/*.js --check",
		"getpretty": "npx prettier --config ./prettier.config.js ./**/*.js --check && npm run prettify"
	},
	"dependencies": {
		"@apollo/client": "^3.3.13",
		"@material-ui/core": "^4.11.3",
		"@material-ui/icons": "^4.11.2",
		"axios": "^0.21.1",
		"deepmerge": "^4.2.2",
		"graphql": "^15.5.0",
		"next": "10.0.9",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"sass": "^1.32.8"
	},
	"devDependencies": {
		"altheajs-prettier-config": "^1.1.1",
		"lint-staged": "^10.5.4",
		"prettier": "2.2.1",
		"simple-git-hooks": "^2.2.0"
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown",
		"*.{js,json,css,md}": "prettier --write"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	}
}
