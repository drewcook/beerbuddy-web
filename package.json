{
	"name": "beerbuddy-web",
	"version": "0.1.0",
	"private": true,
	"cacheDirectories": [
		".next/cache"
	],
	"scripts": {
		"dev": "next dev -p 5440",
		"build": "next build",
		"start": "next start -p $PORT",
		"lint:quality": "npx eslint . --ext .js,.jsx",
		"fix:quality": "npx eslint . --ext .js,.jsx --fix",
		"lint:formatting": "npx prettier --config ./prettier.config.js ./**/* --check",
		"fix:formatting": "npx prettier --config ./prettier.config.js ./**/* --write"
	},
	"dependencies": {
		"@apollo/client": "^3.3.13",
		"@material-ui/core": "^4.11.3",
		"@material-ui/icons": "^4.11.2",
		"apollo-datasource-rest": "^0.11.0",
		"apollo-server-micro": "^2.22.2",
		"axios": "^0.21.1",
		"date-fns": "^2.19.0",
		"deepmerge": "^4.2.2",
		"graphql": "^15.5.0",
		"lodash": "^4.17.21",
		"next": "10.0.9",
		"next-with-apollo": "^5.1.1",
		"nookies": "^2.5.2",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"sass": "^1.32.8"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^2.0.2",
		"altheajs-prettier-config": "^1.2.0",
		"eslint-config-altheajs": "^1.2.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-import-resolver-alias": "^1.1.2",
		"lint-staged": "^10.5.4",
		"prettier": "2.2.1",
		"simple-git-hooks": "^2.2.0"
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown",
		"*.{js,json,css,md}": "prettier --write"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	}
}
